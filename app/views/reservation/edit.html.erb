<div class="reservationeditPage">
  <div class="container">
    <%= form_with model: @reservation, url: { action: :update }, html: { class: 'reservationForm' }, local: true do |f| %>
      <% if @reservation.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control reservationName", placeholder: "工程名" %>
      <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
